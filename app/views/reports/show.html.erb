<%- model_class = Report -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<p>
  <b>Report type:</b>
  <%= @report.report_type %>
</p>

<p>
  <b>Status:</b>
  <%= @report.state.titleize %>
</p>

<p>
  <b>Period begin:</b>
  <%= @report.period_begin %>
</p>

<p>
  <b>Period end:</b>
  <%= @report.period_end %>
</p>

<p>
  <b>Election date:</b>
  <%= @report.election_date %>
</p>

<p>
  <b>Election type:</b>
  <%= @report.election_type %>
</p>

<p>
  <b>Office held:</b>
  <%= @report.office_held %>
</p>

<p>
  <b>Office sought:</b>
  <%= @report.office_sought %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              root_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_filer_report_path(@user, @filer, @report), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_filer_report_path(@user, @filer, @report),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

